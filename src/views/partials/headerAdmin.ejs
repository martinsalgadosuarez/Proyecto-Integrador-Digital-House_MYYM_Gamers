        <!-- Logo -->
        <div class="logo">
            <a href="/"><img width="100%" src="/img/Logo1.png" alt="logo" /></a>
        </div>

        <!-- icono buscador -->
        <div class="btn-search search-icon" onclick="dropSearch()">
            <i class="fas fa-search"></i>
        </div>

        <!-- barra de busqueda -->
        <form action="#" id="search">
            <input class="search" type="search" name="busqueda" placeholder="Buscar productos, marcas y más" />
            <button type="submit" class="btn-search"><i class="fas fa-search"></i></button>
        </form>

        <!-- boton de mi cuenta -->
        <div class="account" onclick="dropAccount(`btnAccount`)">
            <div class="avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="btn-account">
                <p>Mi cuenta</p>
            </div>
            <i class="arrow fas fa-chevron-down"></i>
            <!-- Desplegable de botón mi cuenta -->
            <div class="drop-account" id="btnAccount">
                <ul>
                    <li><a href="">Mi cuenta</a></li>
                    <li><a href="">Opciones de <br> administrador</a></li> 
                </ul>
            </div>
        </div>

        <!-- Botón Carrito -->
        <a href="/shoppingCart">
            <div class="shoppingCart">
                <div class="cart">
                    <i class="fas fa-cart-plus"></i>
                </div>
                <h4 class="total">$0,00</h4>
            </div>
        </a>
